{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "docs",
      "dist",
      "public",
      "**/node_modules/**",
      "bin"
    ],
    "rules": {
      "recommended": true,
      "complexity":{
        "noStaticOnlyClass": "off"
      }
        
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "ignore": [
      "node_modules",
      "docs",
      "dist",
      "public",
      "**/node_modules/**",
      "bin",
      "vite.config.ts",
      "route-tree.gen.ts"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "enabled": true,
      "indentStyle": "tab",
      "indentWidth": 2,
      "lineWidth": 80,
      "lineEnding": "lf",
      "jsxQuoteStyle": "double"
    }
  },
  "files": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx",
      "lib/**/*.ts",
      "lib/**/*.tsx",
      "lib/**/*.js",
      "lib/**/*.jsx",
      "./biome.json",
      "./package.json",
      "./tsconfig.json",
      "./vite.config.ts"
    ],
    "ignore": ["node_modules", "**/node_modules/**", "dist", "bin", "vite.config.ts", "route-tree.gen.ts"],
    "ignoreUnknown": true
  }
}